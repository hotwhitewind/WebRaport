@model WebRaport.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Изменение пароля";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="ChangeUserPassword" asp-controller="Users">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="id" />
                        <input type="hidden" asp-for="Login" />

                        <div class="form-group">
                            <input asp-for="NewPassword" class="form-control" placeholder="Новый пароль" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PasswordConfirm" class="form-control" placeholder="Подтвердите пароль"/>
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Edit" asp-route-Id="@Model.id">Вернуться к редактированию пользователя</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
