@model List<WebRaport.ViewModels.FiledModelWithValue>
@{
    ViewData["Title"] = "Настройка параметров рапорта";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="RaportOptions" asp-action="Index">Главная</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <form asp-action="Preview" asp-controller="RaportOptions" method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                    <div class="form-group">
                        <label class="control-label">@Model[i].FieldName</label>
                        <input type="hidden" asp-for="@Model[i].FieldName" />
                        <input asp-for="@Model[i].FieldValue" class="form-control" />
                    </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Предварительный просмотр" class="btn btn-outline-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

